                            <div class="col-sm-2">
                                <select class="form-control" id="scategory" name="Category" required>
                                </select>
                            </div>



                            <div class="col-sm2 " style="text-align:right;">
                                <button type="submit" id="btn_apply" class="btn btn-primary ">Apply</button>
                                <button type="button" id="apply_cancel" class="btn btn-danger cancel ">Reset</button>

                            </div>

                        </div>


