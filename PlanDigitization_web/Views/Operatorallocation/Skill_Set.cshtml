@model IEnumerable<PlanDigitization_web.Models.Skill_Set>
@{
    ViewBag.Title = "Operator_settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<header class="page-header">
    <h2> Skill Set Details </h2>
    <div class="right-wrapper pull-right">
        <ol class="breadcrumbs">
            <li>
                <a href="@Url.Action("NewDash","Main")">
                    <i class="fa fa-home"></i>
                </a>
            </li>
            <li><span>Settings</span></li>
            <li><span>Skill Set</span></li>
        </ol>
    </div>
</header>



<!----------Select View Div------------>


<div class="row" id="select_div" style="display:block;">

    <div class="col-md-12">
