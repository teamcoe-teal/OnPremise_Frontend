                        <th class="centercls"> S.No </th>
                        <th style="display:none;"></th>
                        <th>Function</th>
                        <th>Machine</th>
                        <th> Tool ID </th>
                        <th> Tool Name</th>
                        <th> Life Cycle</th>
                        <th> Recommendation</th>
                    </tr>
                </thead>
                <tbody>
                    @{int RowNo = 0;}
                    @foreach (var item in Model)
